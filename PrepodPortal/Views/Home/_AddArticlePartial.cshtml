@model PrepodPortal.Models.Article

   @Scripts.Render("~/bundles/jqueryval")

   <form id="formAddArticle" enctype="multipart/form-data" onsubmit="addArticle($(this));return false;">
      @Html.ValidationSummary()
      @Html.AntiForgeryToken()
      <input type="hidden" name="UserId" value="@Model.UserId" />
      <div style="display:inline-block;">
         <div class="puSection first">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
         </div>

         <div class="puSection">
            @Html.LabelFor(model => model.NumOfPages, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.NumOfPages, new { htmlAttributes = new { @class = "form-control" } })
         </div>

         <div class="puSection">
            @Html.LabelFor(model => model.AuthorsName, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.AuthorsName, new { htmlAttributes = new { @class = "form-control" } })
         </div>

         <div class="puSection">
            @Html.EditorFor(model => model.AR_IsProf)
            @Html.LabelFor(model => model.AR_IsProf, htmlAttributes: new { @style = "display:inline-block" })
         </div>

         <div class="puSection">
            @Html.EditorFor(model => model.AR_IsForeign)
            @Html.LabelFor(model => model.AR_IsForeign, htmlAttributes: new { @style = "display:inline-block" })
         </div>
      </div>

      <div style="display:inline-block;margin-left:30px;">
         <div class="puSection first">
            @Html.LabelFor(model => model.AR_WhichSciences, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.AR_WhichSciences, new { htmlAttributes = new { @class = "form-control" } })
         </div>

         <div class="puSection">
            @Html.LabelFor(model => model.AR_Lang, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.AR_Lang, new { htmlAttributes = new { @class = "form-control" } })
         </div>

         <div class="puSection">
            <label for="File">Завантажте статтю</label>
            <input type="file" id="art_file" name="File" />
         </div>
      </div>

      <div class="puSection last">
         <button class="button blue" title="Додати" type="submit" href="javascript:void(0)">
            Додати
         </button>
      </div>

   </form>