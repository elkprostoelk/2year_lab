@model PrepodPortal.Models.SecurityDocument

@Scripts.Render("~/bundles/jqueryval")

<script type="text/javascript">
   $(function () {
      $(".jqDatePicker").datepicker();
   });
</script>

@using (Ajax.BeginForm("AddSecurityDocument", new AjaxOptions() { HttpMethod = "Post", LoadingElementId = "ajax_loader_securityDocuments", UpdateTargetId = "securityDocuments_body", InsertionMode = InsertionMode.Replace }))
{
   @Html.ValidationSummary(true)
   @Html.AntiForgeryToken()

   <input type="hidden" name="UserId" value="@Model.UserId" />
   <input type="hidden" name="Type" value="@Model.Type" />

   <div class="puSection first">
      @Html.LabelFor(model => model.Patent.AuthorNameList, htmlAttributes: new { @class = "control-label col-md-2" })
      @Html.ListBoxFor(m => m.Patent.AuthorNameList,
    new MultiSelectList(C.GetPrepodNameList()),
    new { style = "height:auto; max-height:100px;" })
      <div>Зажмите Ctrl чтобы выбрать</div>
      @Html.ValidationMessageFor(model => model.Patent.AuthorNameList, "", new { @class = "text-danger" })
   </div>

   <div class="puSection">
      @Html.LabelFor(model => model.Patent.Title, htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-10">
         @Html.EditorFor(model => model.Patent.Title, new { htmlAttributes = new { @class = "form-control" } })
         @Html.ValidationMessageFor(model => model.Patent.Title, "", new { @class = "text-danger" })
      </div>
   </div>

   <div class="puSection">
      @Html.LabelFor(model => model.Patent.Owner, htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-10">
         @Html.EditorFor(model => model.Patent.Owner, new { htmlAttributes = new { @class = "form-control" } })
         @Html.ValidationMessageFor(model => model.Patent.Owner, "", new { @class = "text-danger" })
      </div>
   </div>

   <div class="puSection">
      @Html.LabelFor(model => model.Patent.PublishDate, htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-10">
         @Html.EditorFor(model => model.Patent.PublishDate, new { htmlAttributes = new { @class = "form-control" } })
         @Html.ValidationMessageFor(model => model.Patent.PublishDate, "", new { @class = "text-danger" })
      </div>
   </div>

      <div class="puSection">
         @Html.LabelFor(model => model.Patent.Number, htmlAttributes: new { @class = "control-label col-md-2" })
         <div class="col-md-10">
            @Html.EditorFor(model => model.Patent.Number, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Patent.Number, "", new { @class = "text-danger" })
         </div>
      </div>

      <div class="puSection">
         @Html.LabelFor(model => model.Patent.ApplicationNum, htmlAttributes: new { @class = "control-label col-md-2" })
         <div class="col-md-10">
            @Html.EditorFor(model => model.Patent.ApplicationNum, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Patent.ApplicationNum, "", new { @class = "text-danger" })
         </div>
      </div>

      <div class="puSection last">
         <button class="button blue" title="Додати" type="submit" href="javascript:void(0)">
            Додати
         </button>
      </div>
}